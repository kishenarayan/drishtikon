.top-nav{display:flex;justify-content:space-between;align-items:center;padding:1rem 2rem;background:#fff;border-bottom:1px solid #e2e2e2;position:sticky;top:0;margin-bottom:1rem;z-index:1000}.site-title{font-size:1.4rem;font-weight:700;text-decoration:none;color:#333;margin-right:2rem}.nav-links{display:flex;gap:1.5rem;align-items:center}.nav-links a{text-decoration:none;color:#555;transition:color .2s;font-weight:500}.nav-links a:hover,.nav-links a.active{color:#000}.profile-photo{width:1280px;height:960px;object-fit:cover;border-radius:8px;background-color:#f0f0f0;margin-bottom:1rem}.site-footer{padding:2rem 0;margin-top:3rem;border-top:1px solid #eaeaea;text-align:center}.footer-links{display:flex;justify-content:center;gap:2rem;margin-bottom:1rem}@media(max-width:768px){.top-nav{flex-direction:column;align-items:flex-start}.nav-links{margin-top:1rem;flex-wrap:wrap}}